
<% load = Time.now %>
<h1>NEW GAME!</h1>
<br>
<ul>
  <%= @letters %>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>
<br>

<h3>What is the longest word that you can find?</h3>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Type your word here!">
  <%= hidden_field_tag :grid, @letters %>
  <%= hidden_field_tag :response_time, Time.now - load %>
  <input type="submit">
</form>
